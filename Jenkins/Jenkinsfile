node {
    
    
    environment {
        DB_IP = '172.31.40.138'
        BUILD_FILE_PATH  = 'Ansible/booksAndScripts/buildAndPushTest.yml'
        PULL_FILE_PATH  = 'Ansible/booksAndScripts/pullAndRunTest.yml'
        
    }
    stages {

        stage('Pull code from git repository') { // for display purposes
            
            git branch: 'main', url: 'https://github.com/vvd0502/COSC2767-RMIT-Store'
    
        }
        stage('Send files over SSH') {
            
            
            sshPublisher(publishers: [sshPublisherDesc(configName: 'ansible-server', transfers: [sshTransfer(cleanRemote: false, excludes: '', execCommand: '''sed -i "s/\'db_admin\'@\'localhost\'/\'db_admin\'@\'${DB_IP}\'/g" webapp/sql-scripts/sql-script.sql && mv webapp/test-db webapp/test-webapp . && ansible-playbook ${BUILD_FILE_PATH} && ansible-playbook ${PULL_FILE_PATH}''', execTimeout: 120000, flatten: false, makeEmptyDirs: false, noDefaultExcludes: false, patternSeparator: '[, ]+', remoteDirectory: 'webapp', remoteDirectorySDF: false, removePrefix: '', sourceFiles: '**/*')], usePromotionTimestamp: false, useWorkspaceInPromotion: false, verbose: false)])
            
           
        }
        stage('Test') {
            echo "Testing"
        }
            
    }
    
}
